@model IEnumerable<LB1.Models.Phone>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPhotoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src=~/img/@Html.DisplayFor(modelItem => item.IdPhotoNavigation.Path) alt="phoneImg" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a href="~/Orders/Create/@item.Id">Купить</a>
            </td>
        </tr>
}
        
    </tbody>
</table>
@if(ViewBag.PageNumber > 1)
        {
            <a asp-action="Index"
            asp-route-PageNumber="@(ViewBag.PageNumber - 1)">
        Назад</a>
        }
@if(ViewBag.PageNumber <= ViewBag.PageCount)
        {
            <a asp-action="Index"
            asp-route-PageNumber="@(ViewBag.PageNumber + 1)">
        Вперёд</a>
        }